<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.tn_v10.LoginActivity"
    android:background="@color/lanuch"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/et_appId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login"
            android:layout_marginTop="20dp"
            android:hint="输入设备appId"
            android:maxLines="1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_Secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_appId"
            android:layout_marginTop="20dp"
            android:hint="输入设备Secret"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_Secret"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="23sp"/>
    </RelativeLayout>

</LinearLayout>
